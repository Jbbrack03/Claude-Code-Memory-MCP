{
  "name": "claude-memory-mcp",
  "version": "0.15.3",
  "description": "A defensive, Git-aware MCP server providing persistent memory for Claude Code sessions",
  "main": "dist/server/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "claude-memory": "./dist/cli/index.js",
    "claude-memory-mcp": "./dist/server/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server/index.ts",
    "start": "node dist/server/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "ai",
    "memory",
    "persistence"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.46.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.50.0",
    "@opentelemetry/resources": "^1.23.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@opentelemetry/semantic-conventions": "^1.23.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.3.0",
    "chromadb": "^1.8.1",
    "dotenv": "^16.4.5",
    "hnswlib-node": "^3.0.0",
    "prom-client": "^15.1.3",
    "simple-git": "^3.25.0",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropic/claude-memory-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/anthropic/claude-memory-mcp/issues"
  },
  "homepage": "https://github.com/anthropic/claude-memory-mcp#readme"
}
